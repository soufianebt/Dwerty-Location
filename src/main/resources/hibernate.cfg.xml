<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
    <session-factory>
        <property name="hibernate.dialect">org.hibernate.dialect.MySQL5Dialect</property>
        <property name="hibernate.connection.driver_class">com.mysql.jdbc.Driver</property>
        <property name="hibernate.connection.password">root</property>
        <property name="hibernate.connection.url">jdbc:mysql://localhost:3306/Dwerty?createDatabaseIfNotExist=true
        </property>
        <property name="hibernate.connection.username">root</property>
        <property name="hibernate.hbm2ddl.auto">update</property>
        <property name="hibernate.show_sql">true</property>
        <property name="hibernate.format_sql">true</property>
        <mapping class="com.dwirty.beans.Chambre"/>
        <mapping class="com.dwirty.beans.Compose"/>
        <mapping class="com.dwirty.beans.Evaluer"/>
        <mapping class="com.dwirty.beans.ImageLogement"/>
        <mapping class="com.dwirty.beans.Lit"/>
        <mapping class="com.dwirty.beans.Logement"/>
        <mapping class="com.dwirty.beans.Proprietaire"/>
        <mapping class="com.dwirty.beans.User"/>


    </session-factory>
</hibernate-configuration>